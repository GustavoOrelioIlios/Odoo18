<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_sicoob_config" model="ir.ui.view">
        <field name="name">res.partner.form.sicoob.config</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_payment_api.view_partner_form_payment_config"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payment_config']/group" position="after">
                <group string="Configurações Específicas do Sicoob">
                    <group string="Juros">
                        <field name="payment_interest_code" string="Código de Juros (Sicoob)" 
                               options="{'no_create': True, 'no_open': True}"/>
                        <field name="payment_interest_percent" invisible="payment_interest_code not in ['2']"
                               string="Percentual de Juros (Sicoob)"/>
                        <field name="payment_interest_value" invisible="payment_interest_code not in ['1']"
                               string="Valor Fixo de Juros (Sicoob)"/>
                        <field name="payment_interest_date_start" invisible="payment_interest_code in ['3']"
                               string="Dias para Início dos Juros (Sicoob)"/>
                    </group>
                    <group string="Multa">
                        <field name="payment_penalty_code" string="Código de Multa (Sicoob)"
                               options="{'no_create': True, 'no_open': True}"/>
                        <field name="payment_penalty_percent" invisible="payment_penalty_code not in ['2']"
                               string="Percentual de Multa (Sicoob)"/>
                        <field name="payment_penalty_value" invisible="payment_penalty_code not in ['1']"
                               string="Valor Fixo de Multa (Sicoob)"/>
                        <field name="payment_penalty_date_start" invisible="payment_penalty_code in ['0']"
                               string="Dias para Início da Multa (Sicoob)"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo> 