<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Adiciona campos de configuração Sicoob no diário -->
        <record id="view_account_journal_form_inherit_sicoob" model="ir.ui.view">
            <field name="name">account.journal.form.inherit.sicoob</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <!-- Adiciona seção de configurações Sicoob -->
                <xpath expr="//page[@name='advanced_settings']//group" position="inside">
                    <group string="Configurações Sicoob" name="sicoob_settings"
                           invisible="type != 'bank'">
                        <field name="bank_account_id"/>
                        <field name="sicoob_modality_code"/>
                        <field name="sicoob_especie_documento"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 